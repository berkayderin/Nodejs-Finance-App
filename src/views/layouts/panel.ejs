<!DOCTYPE html>
<html lang="tr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Panel</title>
		<script src="https://cdn.tailwindcss.com"></script>
		<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<script>
			tailwind.config = {
				theme: {
					extend: {
						colors: {
							primary: {
								50: '#f0fdf4',
								100: '#dcfce7',
								200: '#bbf7d0',
								300: '#86efac',
								400: '#4ade80',
								500: '#22c55e',
								600: '#16a34a',
								700: '#15803d',
								800: '#166534',
								900: '#14532d',
								950: '#052e16'
							}
						}
					}
				}
			}
		</script>
	</head>
	<body class="h-full">
		<div x-data="{ sidebarOpen: false }" class="min-h-screen bg-gray-100">
			<%- include('../partials/panel/sidebar') %>
			<div class="lg:pl-72">
				<%- include('../partials/panel/header') %>
				<main class="py-10">
					<div class="px-4 sm:px-6 lg:px-8"><%- body %></div>
				</main>
			</div>
		</div>
		<%- typeof scripts !== 'undefined' ? scripts : '' %>
	</body>
</html>
